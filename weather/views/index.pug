extends layout
block content
  .container
      h2 
        p
         | OpenShift Weather App
      br
      br
      .row
        .col-md-3
          form(method="post", action="get_weather")
            .form-group
              label.sr-only(for="city") Nombre de la ciudad
              input.form-control( name="city" type="text" placeholder="Ingrese el nombre de la ciudad (Por ejemplo: New York)" required='required')
            button.btn.btn-success(type="submit") Obtener el clima
      if error
        br
        .alert.alert-danger #{error}
      if weather
        .row
          .col-md-5
            p
            br
            .panel.panel-primary
              .panel-heading Clima para: #{weather.name}, #{weather.sys.country}
              .panel-body
               p Temperatura actual = #{weather.main.temp} !{units}, #{weather.weather[0].description}
               p Sensaci&oacute;n t&eacute;rmica = #{weather.main.feels_like} !{units}
               p Humedad = #{weather.main.humidity} &#37;
               p Min = #{weather.main.temp_min} !{units}
               p Max = #{weather.main.temp_max} !{units}